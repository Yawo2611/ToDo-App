<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo_App.MainPage"
             Shell.NavBarIsVisible="False"
             Background="#f5f5f5"
             Title="Home">
    <VerticalStackLayout
        Padding="20"
        Spacing="15">

        <!-- Logo -->
        <Image
            Source="logo.png"
            HeightRequest="80"
            WidthRequest="80"
            Aspect="AspectFit"
            HorizontalOptions="Center" />

        <!-- Überschrift -->
        <Label
            Text="SimpleTask"
            FontFamily="Inter"
            FontAttributes="Bold"
            FontSize="28"
            TextColor="#0078D4"
            HorizontalOptions="Center"
            Margin="0, 10, 0, 20" />

        <!-- Aufgabenliste -->
        <CollectionView 
            x:Name="taskView"
            SelectionMode="Single"
            BackgroundColor="#FFFFFF"
            Margin="0, 10, 0, 10"
            SelectionChanged="OnTaskSelected">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame 
                        Padding="15" 
                        Margin="0, 10"
                        CornerRadius="15"
                        BackgroundColor="#ffffff"
                        BorderColor="#e0e0e0"
                        HasShadow="True">
                        <VerticalStackLayout Spacing="5">

                            <CheckBox 
                            IsChecked="{Binding IsCompleted, Mode=TwoWay}" 
                            VerticalOptions="Center"
                            CheckedChanged="OnTaskCompletedChanged"/>   

                            <!-- Titel -->
                            <Label
                                Text="{Binding Title}"
                                FontFamily="Inter"
                                FontAttributes="Bold"
                                FontSize="20"
                                TextColor="#0078D4" 
                                TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToTextDecorationConverter}}"/>

                            <!-- Beschreibung -->
                            <Label
                                Text="{Binding Description}"
                                FontFamily="Inter"
                                FontSize="16"
                                TextColor="#333333" 
                                TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToTextDecorationConverter}}"/>

                            <!-- Fälligkeitsdatum -->
                            <Label 
                                Text="{Binding DueDate, StringFormat='Due: {0:yyyy-MM-dd}'}" 
                                FontSize="14" 
                                TextColor="#FF6F61"
                                Margin="0, 5, 0, 0" 
                                TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToTextDecorationConverter}}"/>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
